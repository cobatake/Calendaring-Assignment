  /**
   * Set event Timezone
   * @param timezone
   */
   public void setTimezone(String timezone) {
      timezone=this.timezone;
  }
  public String getTimezone(){
    return timezone;
  }
  
  
  /**
   * Sets time
   * @param time
   */
  public void setStartTime(String time, String date) {
      time=this.time;
      date=this.date;
  }
  
  /**
   * Gets time
   * @param time
   */
  public String getStartTime() {
      return date+"T"+time;
  }
  
  /**
   * Sets time
   * @param time
   */
  public void setEndTime(String time, String date) {
      time=this.time;
      date=this.date;
  }
  
  /**
   * Gets time
   * @param time
   */
  public String getEndTime() {
      return date+"T"+time;
  }
  
  
  /**
   * Returns time in appropriate format for .ics
   * TZID + Time
     */
  public void getTime(){
  System.out.println("DTSTART;TZID="+getTimezone()+getStartTime());
  System.out.println("DTEND;TZID=" + getTimezone()+getEndTime());
  }
